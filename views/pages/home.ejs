<!DOCTYPE html>
<html lang="en">

<%- include('../includes/header') %>


<body>


    <%- include('../includes/navbar') %>


  <!-- Latest News Start -->
  <div class="container-fluid latest-news py-5">
    <div class="container py-5">
      <h2 class="mb-4">Latest News</h2>
      <div class="row ">

        <% blogPosts.forEach(post => { %>
          <div class="latest-news-item col-md-4 mb-3 mt-3">
            <div class="bg-light rounded shadow">
              <div class="rounded-top overflow-hidden">
                <img src="<%= post.bannerImage %>" class="img-zoomin img-fluid rounded-top w-100" alt="">
              </div>
              <div class="d-flex flex-column p-4">
                <a href="post/<%= post.id %>" class="h4"><%= post.title %> ...</a>
                <div class="d-flex justify-content-between">
                  <a href="post/<%= post.id %>" class="small text-body link-hover">by <%= post.author %></a>
                  <small class="text-body d-block"><i class="fas fa-calendar-alt me-1"></i> <%= post.date %></small>
                </div>
              </div>
            </div>
          </div>
        <% }) %>


       
      </div>
    </div>
  </div>
  <!-- Latest News End -->



  <%- include('../includes/footer') %>
  <%- include('../includes/scripts') %>




</body>

</html>